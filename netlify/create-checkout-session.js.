const stripe = require("stripe")(process.env.STRIPE_SECRET_KEY);

exports.handler = async (event) => {
  try {
    const session = await stripe.checkout.sessions.create({
      payment_method_types: ["card"],
      line_items: [
        {
          price: "prod_Synw5CQxDuaEej", // Vervang door jouw Stripe Price ID
          quantity: 1,
        },
      ],
      mode: "payment",
      success_url: "https://rijscholenadvies.nl/betaling-gelukt",
      cancel_url: "https://rijscholenadvies.nl/Not-found",
    });

    return {
      statusCode: 200,
      body: JSON.stringify({ id: session.id }),
    };
  } catch (err) {
    return {
      statusCode: 500,
      body: JSON.stringify({ error: err.message }),
    };
  }
};
